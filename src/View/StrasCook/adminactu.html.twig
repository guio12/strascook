{%  extends 'layout.html.twig' %}

{% block header %}
{% endblock %}


{% block stylesheetpages %}

    <link rel="stylesheet" href="/assets/css/style.css">
    <script src="../assets/js/admin_actu.js"></script>

{% endblock %}



{% block content %}

    <div class="container">

    <form class="row" method="post" action="/admin/actu/ajouter">

    <div class="col-6">

        <label for="titre">Titre de l'actualit√© :</label><br>
        <input type="text" name="titre" id="titre"><br><br>

    </div>

    <div class="col">

            <label for="image">Image (Format .jpg / Max 2 Mo)</label>
            <input class="form-control" name="image" type="file" required>

    </div>

    <div class="col-12">

        <label for="contenu">Introduction :</label><br>
        <textarea class="form-control" name="contenu" id="contenu" cols="30" rows="10"></textarea>
        <br>
        <br>

    </div>


    <div class="col-3 offset-5">

        <input type="submit" value="Envoyer">

    </div>


    </form>

        <button class="btn-primary btn" id="bouton_ajout_actu">Voir tableau</button>

    </div>

    <hr>

    <div class="container" id="ajout_actu" style="display: none;">

        <table class="table">
          <tr>
            <th>Titre</th>
            <th>Image</th>
            <th>Contenu</th>
          </tr>
          {% for actu in donnees %}
            <tr>
              <td>{{ actu.titre }}</td>
              <td>{{ actu.image }}</td>
              <td>{{ actu.contenu }}</td>
            </tr>
            {% endfor %}


        </table>

    </div>


{% endblock %}

{% block footer %}
{% endblock %}
