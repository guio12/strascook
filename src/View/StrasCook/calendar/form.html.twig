{% block content %}

    <br>
<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <label for="name">Titre</label>
            <input id="name" type="text" required class="form-control" name="name" value=" {{ event.getName() }} ">
            {% if errors[name] is defined %}
            <small class="form-text text-muted">{{ errors[name] }}</small>
            {% endif %}
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <label for="date">Date</label>
            <input id="date" type="date" required class="form-control" name="date" value="{{ date }}">
            {% if errors[date] is defined %}
            <small class="form-text text-muted">{{ errors[date] }}</small>
            {% endif %}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <label for="start">DÃ©marrage</label>
            <input id="start" type="time" required class="form-control" name="start" placeholder="HH:MM" value="{{ start }}">
            {% if errors[start] is defined %}
            <small class="form-text text-muted">{{ errors[start] }}</small>
            {% endif %}
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <label for="end">Fin</label>
            <input id="end" type="time" required class="form-control" name="end" placeholder="HH:MM" value="{{ end }}">
        </div>
    </div>
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control">{{ description }}</textarea>

</div>

{% endblock %}