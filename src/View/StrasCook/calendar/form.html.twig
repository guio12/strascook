{% block content %}

    <br>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label for="type">Menu choisi</label>
                <select class="form-control" name="name" id="type">

                    <optgroup label="Classique">
                    {% for menu in donneesClassiques %}
                        <option {% if menu.titre == menu.name %} selected {% endif %} value="{{ menu.titre }}">{{ menu.titre }}</option>
                    {% endfor %}
                    </optgroup>

                    <optgroup label="Végétarien">
                    {% for menu in donneesVegetariens %}
                        <option {% if menu.titre == menu.name %} selected {% endif %} value="{{ menu.titre }}">{{ menu.titre }}</option>
                    {% endfor %}
                    </optgroup>

                    <optgroup label="Vegan">
                    {% for menu in donneesVegans %}
                        <option {% if menu.titre == menu.name %} selected {% endif %} value="{{ menu.titre }}">{{ menu.titre }}</option>
                    {% endfor %}
                    </optgroup>

                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label for="date">Date</label>
                <input id="date" type="date" required class="form-control" name="date" value="{{ date }}">
                {% if errors[date] is defined %}
                    <small class="form-text text-muted">{{ errors[date] }}</small>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label for="start">Début</label>
                <input id="start" type="time" required class="form-control" name="start" placeholder="HH:MM" value="{{ start }}">
                {% if errors[start] is defined %}
                    <small class="form-text text-muted">{{ errors[start] }}</small>
                {% endif %}
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label for="end">Fin</label>
                <input id="end" type="time" required class="form-control" name="end" placeholder="HH:MM" value="{{ end }}">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="description">Veuillez renseigner ici votre nom, prénom, adresse, numéro de téléphone et le nombre de convives.</label>
        <textarea name="description" id="description" class="form-control" rows="10"></textarea>

    </div>

{% endblock %}